/* Average Pizzas Per Order*/
SELECT ROUND(Sum(quantity)/COUNT(DISTINCT order_id),2) AS AVG_Pizza_Per_order
FROM `pizza-sales-440216.Pizza_Sales_Data.pizza_data_sales1`

